#include <iostream>
#include <string.h>
#include <Windows.h> 
#include <stdlib.h>
#include <utility> 


using namespace std;

 
void Console_Clear() {

	system("CLS");

}

int default_array[100][100];
int min = 9999; 
bool arrayBOOL = false;
bool repeat_bool = false;
int main()
{ 
