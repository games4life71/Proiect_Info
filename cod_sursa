					Console_Clear();
					//date matrice 

					cout << "Introdu numarul de linii si de coloane" << endl;

					cin >> n >> m;
					Console_Clear();
					cout << "Introdu pe rand elementele matricei" << endl;


					// citire matrice 
					for (int i = 0; i < n; i++)
					{
						for (int j = 0; j < m; j++)
						{
							cin >> C[i][j];
						}
					}
