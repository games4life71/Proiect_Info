		cout << "5-RIDICARE LA PUTERE A MATRICII " << endl; 
		cout << "6-TRANSPUSA UNEI MATRICI " << endl;	
		cout << "." << endl;
		cout << "." << endl;
		cout << "." << endl;
		cout << "0-IESIRE " << endl;
		cin >> menu_choice; 
		
