				for (int i = 0; i < n; i++)
				{
					for (int j = 0; j < m; j++) 
					{

						cout << C[i][j]<< " ";

         			}

					cout << endl;

				}

				cout << endl;
				cout << endl;

				cout << "Valoare minima a matricei este " << " " << min << endl;
				cout << "Coordonatele acesteia sunt" << " " << " linia " << " " << coordMIN.first+1 << " " << "coloana" << " " << coordMIN.second+1 << endl;
				system("pause");
				break;


			//case 2 -> se afiseaza maximul matricei 

			case 2  : 


				int max = -9999;

				for (int i = 0; i < n; i++)
				{
					for (int j = 0; j < m; j++)
					{
						if (C[i][j] > max)
						{
							max = C[i][j];
							coordMAX.first = i;
							coordMAX.second = j;
						}
					}
				}

				for (int i = 0; i < n; i++)
				{
					for (int j = 0; j < m; j++)
					{

						cout << C[i][j]<<" ";

					}

					cout << endl;
					cout << endl;

				}
